# API 설정
# 백엔드와 대시보드 모두 이 API_KEY를 사용합니다
API_KEY=your-api-key-here
API_KEY_HEADER=Authorization

# 데이터베이스
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mediview
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/mediview
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# OCR 설정
OCR_WORKERS=1
OCR_MAX_QUEUE=64
OCR_DPI=300
OCR_MODEL_DIR=/app/models
# PaddleOCR 모델 디렉토리 (볼륨 마운트 경로)
PADDLEOCR_HOME=/root/.paddleocr

# 파일 설정
MAX_FILE_SIZE_MB=10

# 서버 설정
HOST=localhost
PORT=8080
LOG_LEVEL=INFO

# 애플리케이션
APP_NAME=mediview
APP_VERSION=0.1.0

